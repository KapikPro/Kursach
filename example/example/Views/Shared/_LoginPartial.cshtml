@using Microsoft.AspNetCore.Identity
@using example.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<li class="dropdown notification-list">

    @if (SignInManager.IsSignedIn(User))
    {
        <a class="nav-link dropdown-toggle nav-user arrow-none me-0" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false"
           aria-expanded="false">
            <span class="account-user-avatar">
                <img src="/assets/images/users/avatar-1.jpg" alt="user-image" class="rounded-circle">
            </span>
            <span>
                <span class="account-user-name">@User.Identity?.Name</span>
            </span>
        </a>
        <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated topbar-dropdown-menu profile-dropdown">

            <!-- item-->
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="mdi mdi-account-circle me-1"></i>
                <span>Мой аккаунт</span>
            </a>

           @*  <!-- item-->
            <a href="javascript:void(0);" class="dropdown-item notify-item">
                <i class="mdi mdi-account-edit me-1"></i>
                <span>Settings</span>
            </a> *@

            <!-- item-->
            <a href="https://youtu.be/dQw4w9WgXcQ?si=SK5c8vZ68gufK3Xs" class="nav-link text-dark">
                <i class="mdi mdi-lifebuoy me-1"></i>
                <span>Поддержка</span>
            </a>

            <!-- item-->

            <form class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="dropdown-item notify-item">Выход</button>
            </form>

        </div>
    }
    else
    {
        <br />
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Вход</a>
    }
</li>